@model exoCatalogueProduit.Models.CAT_CATEGORIE
@{
    ViewBag.Title = "ajouterCategorie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ajouterCategorie</h2>

<div>

    <form id="formCategorie" name="formCategorie" action="" method="post">
        @if (Model != null)
        {
            <input type="hidden" name="CODE_CATEGORIE"id="CODE_CATEGORIE" value="@Model.CODE_CATEGORIE" />
        }
        <div class="form-group">
            <label>CATEGORIE</label>
            <input type="text" id="LIBELLE_CATEGORIE" name="LIBELLE_CATEGORIE" class="form-control"required value="@(Model!=null? Model.LIBELLE_CATEGORIE:"")"/>
        </div>
        <div>
            @if (Model == null)
            {
                <input type="submit" id="enregistrer" name="enregistrer" value="enregistrer" class="btn btn-primary" />
            }
            else
            {
                <input type="submit" id="Modifier" name="Modifier" value="enregistrer Modifier" class="btn btn-success" />
                <a href="~/Categorie/ajouterCategorie"class="btn btn-default">Annuler</a>
            }

        </div>
    </form>


    <hr />

    <div class="table-responsive">
        <table class="table table-bordered">
            <tr>
                <th>CATEGORIE</th>
                <th>DATE_SAISIE</th>
            </tr>
           @foreach(var data in ViewBag.listCategorie)
           {
        <tr>
            <td>@data.LIBELLE_CATEGORIE</td>
            <td>@data.DATE_SAISIE</td>
            <td><a href="~/Categorie/ModifierCategorie/@data.CODE_CATEGORIE" class="btn btn-warning btn-xs"><span class="glyphicon glyphicon-edit"></span>Modifier</a></td>
            <td><a href="~/Categorie/SupprimerCategorie/@data.CODE_CATEGORIE" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span>Supprimer</a></td>
        </tr>
           }
        </table>
    </div>
</div>
